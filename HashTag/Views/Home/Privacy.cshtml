@{
    ViewData["Title"] = Localizer["Privacy_Title"];
    ViewData["Description"] = Localizer["Privacy_Description"];
    ViewData["Keywords"] = "chính sách bảo mật, privacy policy, bảo vệ thông tin, quyền riêng tư";
    ViewData["CanonicalUrl"] = "https://viralhashtag.vn/chinh-sach-bao-mat";
    Layout = "_LayoutPublic";
}

<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card card-hashtag">
                <div class="card-header bg-light">
                    <h1 class="h3 mb-0"><i class="bi bi-shield-check text-primary"></i> @Localizer["Privacy_PageTitle"]</h1>
                </div>
                <div class="card-body">
                    <p class="lead text-muted">
                        @Localizer["Privacy_Intro"]
                    </p>

                    <hr class="my-4">

                    <h4 class="mt-4 mb-3"><i class="bi bi-info-circle text-primary"></i> @Localizer["Privacy_InformationCollected"]</h4>
                    <p>
                        @Localizer["Privacy_InformationCollectedText"]
                    </p>
                    <ul>
                        <li>@Localizer["Privacy_NoAccountRequired"]</li>
                        <li>@Localizer["Privacy_NoSearchHistory"]</li>
                        <li>@Localizer["Privacy_NoEmailPhone"]</li>
                    </ul>

                    <h4 class="mt-4 mb-3"><i class="bi bi-database text-primary"></i> @Localizer["Privacy_PublicData"]</h4>
                    <p>
                        @Localizer["Privacy_PublicDataText"]
                    </p>
                    <ul>
                        <li>@Localizer["Privacy_PublicDataSource1"]</li>
                        <li>@Localizer["Privacy_PublicDataSource2"]</li>
                        <li>@Localizer["Privacy_PublicDataSource3"]</li>
                    </ul>

                    <h4 class="mt-4 mb-3"><i class="bi bi-cookie text-primary"></i> @Localizer["Privacy_CookiesSession"]</h4>
                    <p>
                        @Localizer["Privacy_CookiesText"]
                    </p>
                    <ul>
                        <li><strong>Session cookies:</strong> @Localizer["Privacy_SessionCookies"]</li>
                        <li><strong>Preference cookies:</strong> @Localizer["Privacy_PreferenceCookies"]</li>
                        <li><strong>No tracking:</strong> @Localizer["Privacy_NoTracking"]</li>
                    </ul>
                    <p class="text-muted small">
                        @Localizer["Privacy_CookiesNote"]
                    </p>

                    <h4 class="mt-4 mb-3"><i class="bi bi-shield-lock text-primary"></i> @Localizer["Privacy_Security"]</h4>
                    <p>
                        @Localizer["Privacy_SecurityText"]
                    </p>

                    <h4 class="mt-4 mb-3"><i class="bi bi-arrow-repeat text-primary"></i> @Localizer["Privacy_PolicyUpdates"]</h4>
                    <p>
                        @Localizer["Privacy_PolicyUpdatesText"]
                    </p>

                    <hr class="my-4">

                    <div class="alert alert-info border-0">
                        <h5><i class="bi bi-envelope"></i> @Localizer["Privacy_Contact"]</h5>
                        <p class="mb-0">
                            @Localizer["Privacy_ContactText"]
                            <a href="mailto:viralhashtagvn@gmail.com" class="alert-link">viralhashtagvn@gmail.com</a>
                        </p>
                    </div>

                    <p class="text-muted small mt-4">
                        <i class="bi bi-calendar"></i> @Localizer["Privacy_LastUpdated"] 10/01/2026
                    </p>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-controller="Hashtag" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-arrow-left"></i> @Localizer["Privacy_BackToHome"]
                </a>
            </div>
        </div>
    </div>
</div>
