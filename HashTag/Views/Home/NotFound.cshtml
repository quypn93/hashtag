@using Microsoft.Extensions.Localization
@using HashTag
@using HashTag.Helpers
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["NotFound_PageTitle"];
    ViewData["Description"] = Localizer["NotFound_PageDescription"];
    Layout = "_LayoutPublic";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="text-center">
                <!-- 404 Illustration -->
                <div class="mb-4">
                    <span style="font-size: 120px; font-weight: bold; color: #6c757d; line-height: 1;">404</span>
                </div>

                <h1 class="h3 mb-3">@Localizer["NotFound_Title"]</h1>

                <p class="text-muted mb-4">
                    @Localizer["NotFound_Description"]
                </p>

                <!-- Suggestions -->
                <div class="card card-hashtag mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-lightbulb text-warning"></i> @Localizer["NotFound_Suggestions"]
                        </h5>
                        <ul class="list-unstyled text-start mb-0">
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success"></i>
                                @Localizer["NotFound_CheckUrl"]
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success"></i>
                                @Localizer["NotFound_UseSearch"]
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success"></i>
                                @Localizer["NotFound_GoHome"]
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <a href="/" class="btn btn-primary btn-lg">
                        <i class="bi bi-house-door"></i> @Localizer["NotFound_BackToHome"]
                    </a>
                    <a href="@LocalizedUrlHelper.GetLocalizedUrl(Context, "search")" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-search"></i> @Localizer["NotFound_SearchHashtag"]
                    </a>
                </div>

                <!-- Popular Links -->
                <div class="mt-5">
                    <h6 class="text-muted mb-3">@Localizer["NotFound_PopularPages"]</h6>
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        <a href="/" class="btn btn-sm btn-outline-primary">@Localizer["NotFound_TopHashtag"]</a>
                        <a href="/blog" class="btn btn-sm btn-outline-primary">Blog</a>
                        <a href="@LocalizedUrlHelper.GetGrowthTrackingUrl(Context)" class="btn btn-sm btn-outline-primary">@Localizer["NotFound_Analysis"]</a>
                        <a href="@LocalizedUrlHelper.GetCategoryUrl(Context, "entertainment")" class="btn btn-sm btn-outline-primary">@Localizer["NotFound_Entertainment"]</a>
                        <a href="@LocalizedUrlHelper.GetCategoryUrl(Context, "education")" class="btn btn-sm btn-outline-primary">@Localizer["NotFound_Education"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
