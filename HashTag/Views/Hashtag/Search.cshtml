@model HashtagSearchViewModel
@{
    ViewData["Title"] = $"Tìm kiếm: {Model.Query}";
    Layout = "_LayoutPublic";
}

<style>
    /* Search box styling */
    .search-box {
        padding: 1rem 1.5rem;
        font-size: 1.1rem;
        border: 2px solid #e0e0e0;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

    .search-box:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-search {
        padding: 1rem 2rem;
        font-size: 1.1rem;
        border-radius: 50px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-search:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    /* Card animations */
    .hover-lift {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .card-hashtag {
        border-left: 4px solid #0d6efd;
    }

    .hashtag-metrics {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 0.5rem;
    }

    .card-footer {
        background: #f8f9fa;
        border-top: 1px solid #dee2e6;
    }

    /* Bar chart items */
    .hashtag-bar-item {
        transition: all 0.2s ease;
        padding: 0.5rem;
        border-radius: 0.5rem;
    }

    .hashtag-bar-item:hover {
        background: #f8f9fa;
        transform: translateX(5px);
    }

    .hashtag-name {
        font-size: 1.1rem;
        color: #333;
    }

    .view-count {
        font-size: 1.1rem;
        color: #f5576c;
    }
</style>

<!-- Header Section -->
<div class="text-center mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 3rem 0; margin-top: -2rem;">
    <div class="container">
        <h1 class="text-white mb-3">
            <i class="bi bi-search"></i> Kết quả tìm kiếm: "@Model.Query"
        </h1>
        <p class="text-white-50 mb-0">Tìm thấy @Model.Results.TotalCount hashtag</p>
    </div>
</div>

<div class="container">
    <!-- Search Bar -->
    <div class="row mb-5">
        <div class="col-md-12">
            @* <form asp-action="Search" method="get" class="d-flex gap-3" id="searchForm">
                <input type="text" name="query" id="searchQuery" class="form-control search-box flex-grow-1"
                       placeholder="Tìm kiếm hashtag... (VD: vietnam, tiktok, travel)"
                       value="@Model.Query"
                       required
                       minlength="2" />
                <button class="btn btn-primary btn-search px-4" type="submit">
                    <i class="bi bi-search"></i> Tìm Kiếm
                </button>
            </form> *@
        </div>
    </div>

    <!-- Live Search Results (when hashtag not in database) -->
    @if (Model.LiveResult != null)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-info border-primary">
                    <h5 class="alert-heading">
                        <i class="bi bi-cloud-download"></i> Live Result from TikTok
                    </h5>
                    <p class="mb-3">
                        This hashtag was not found in our database, but we found it on TikTok Creative Center:
                    </p>

                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h3 class="text-primary mb-3">@Model.LiveResult.TagDisplay</h3>

                                    <dl class="row mb-0">
                                        @if (Model.LiveResult.PostCount.HasValue)
                                        {
                                            <dt class="col-sm-4">Posts:</dt>
                                            <dd class="col-sm-8">
                                                @{
                                                    var postCountFormatted = Model.LiveResult.PostCount.Value >= 1_000_000
                                                        ? $"{Model.LiveResult.PostCount.Value / 1_000_000.0:F1}M"
                                                        : Model.LiveResult.PostCount.Value >= 1000
                                                            ? $"{Model.LiveResult.PostCount.Value / 1000.0:F1}K"
                                                            : Model.LiveResult.PostCount.Value.ToString("N0");
                                                }
                                                <span class="badge bg-info fs-6">@postCountFormatted</span>
                                            </dd>
                                        }

                                        <dt class="col-sm-4">Source:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-secondary">@Model.LiveResult.Source</span>
                                        </dd>

                                        <dt class="col-sm-4">Searched:</dt>
                                        <dd class="col-sm-8">@Model.LiveResult.SearchedAt.ToString("g")</dd>
                                    </dl>
                                </div>

                                <div class="col-md-6 text-end">
                                    <form asp-action="AddToTracking" method="post" style="display: inline;">
                                        <input type="hidden" name="tag" value="@Model.LiveResult.Tag" />
                                        <input type="hidden" name="postCount" value="@Model.LiveResult.PostCount" />
                                        <button type="submit" class="btn btn-success btn-lg">
                                            <i class="bi bi-plus-circle"></i> Add to Tracking List
                                        </button>
                                    </form>
                                    <p class="text-muted mt-2 small">
                                        <i class="bi bi-info-circle"></i> This hashtag will be included in future crawls
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Hashtag Pills with Copy Button -->
    @if (Model.Results.Items.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="hashtag-pills-container p-4" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border-radius: 1rem;">
                    <div class="d-flex flex-wrap gap-2 align-items-center justify-content-center">
                        @foreach (var hashtag in Model.Results.Items.OrderByDescending(h => h.LatestViewCount ?? 0).Take(10))
                        {
                            <span class="badge bg-white text-dark px-3 py-2 fs-6">@hashtag.TagDisplay</span>
                        }
                        <button class="btn btn-warning px-4 py-2" onclick="copyAllHashtags()" style="border-radius: 50px; font-weight: 600;">
                            <i class="bi bi-clipboard"></i> COPY
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Results as Bar Chart -->
    <div class="row">
        @if (Model.Results.Items.Any())
        {
            <div class="col-12">
                <div class="card shadow-sm" style="border-radius: 1.5rem; border: 2px solid #f093fb;">
                    <div class="card-body p-4">
                        <h4 class="text-center mb-4 fw-bold">Lượt Xem Theo Hashtag</h4>

                        @{
                            var maxViews = Model.Results.Items.Max(h => h.LatestViewCount ?? 0);
                        }

                        @foreach (var hashtag in Model.Results.Items.OrderByDescending(h => h.LatestViewCount ?? 0))
                        {
                            var viewCount = hashtag.LatestViewCount ?? 0;
                            var postCount = hashtag.LatestPostCount ?? 0;
                            var percentage = maxViews > 0 ? (double)viewCount / maxViews * 100 : 0;

                            var viewFormatted = viewCount >= 1_000_000_000
                                ? $"{viewCount / 1_000_000_000.0:F1}B"
                                : viewCount >= 1_000_000
                                    ? $"{viewCount / 1_000_000.0:F1}M"
                                    : viewCount >= 1000
                                        ? $"{viewCount / 1000.0:F1}K"
                                        : viewCount.ToString("N0");

                            var postFormatted = postCount >= 1_000_000_000
                                ? $"{postCount / 1_000_000_000.0:F1}B"
                                : postCount >= 1_000_000
                                    ? $"{postCount / 1_000_000.0:F1}M"
                                    : postCount >= 1000
                                        ? $"{postCount / 1000.0:F1}K"
                                        : postCount.ToString("N0");

                            <div class="hashtag-bar-item mb-3" style="cursor: pointer;" onclick="window.location.href='@Url.Action("Details", new { slug = hashtag.Tag })'">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <div class="d-flex align-items-center gap-2">
                                        <strong class="hashtag-name">@hashtag.TagDisplay</strong>
                                        @if (hashtag.IsViral)
                                        {
                                            <span class="badge bg-danger" title="Viral">
                                                <i class="bi bi-fire"></i> VIRAL
                                            </span>
                                        }
                                        @if (hashtag.RankDiff.HasValue && hashtag.RankDiff.Value != 0)
                                        {
                                            var rankDiffClass = hashtag.RankDiff.Value > 0 ? "bg-success" : "bg-danger";
                                            var rankDiffIcon = hashtag.RankDiff.Value > 0 ? "bi-arrow-up" : "bi-arrow-down";
                                            <span class="badge @rankDiffClass">
                                                <i class="bi @rankDiffIcon"></i> @Math.Abs(hashtag.RankDiff.Value)
                                            </span>
                                        }
                                    </div>
                                    <div class="d-flex align-items-center gap-3">
                                        @if (postCount > 0)
                                        {
                                            <span class="text-muted" style="font-size: 0.9rem;">
                                                <i class="bi bi-file-post"></i> @postFormatted posts
                                            </span>
                                        }
                                        @if (viewCount > 0)
                                        {
                                            <strong class="view-count">
                                                <i class="bi bi-eye"></i> @viewFormatted
                                            </strong>
                                        }
                                    </div>
                                </div>
                                <div class="progress" style="height: 25px; border-radius: 50px;">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         style="width: @percentage%; background: linear-gradient(90deg, #f093fb 0%, #f5576c 100%);"
                                         aria-valuenow="@percentage"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-warning text-center">
                    <i class="bi bi-exclamation-triangle fs-1"></i>
                    <h4 class="mt-3">Không tìm thấy kết quả cho "@Model.Query"</h4>
                    <p class="mb-0">Thử tìm kiếm với từ khóa khác hoặc kiểm tra lại chính tả.</p>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.Results.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (Model.Results.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.Results.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@i">@i</a>
                            </li>
                        }

                        @if (Model.Results.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Search" asp-route-query="@Model.Query" asp-route-page="@(Model.CurrentPage + 1)">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg px-5" style="border-radius: 50px;">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<script>
    function copyAllHashtags() {
        const hashtags = @Html.Raw(Json.Serialize(Model.Results.Items.OrderByDescending(h => h.LatestViewCount ?? 0).Select(h => h.TagDisplay).ToList()));
        const text = hashtags.join(' ');

        navigator.clipboard.writeText(text).then(() => {
            // Show success feedback
            const btn = event.target.closest('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check-circle"></i> COPIED!';
            btn.classList.add('btn-success');
            btn.classList.remove('btn-warning');

            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.classList.remove('btn-success');
                btn.classList.add('btn-warning');
            }, 2000);
        });
    }
</script>
