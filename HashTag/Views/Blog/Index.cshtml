@model HashTag.ViewModels.BlogIndexViewModel
@{
    ViewData["Title"] = Localizer["Blog_PageTitle"];
    Layout = "_LayoutPublic";
}

<!-- Blog Index Page -->
<div class="blog-header py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container text-center text-white">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-journal-text me-3"></i>
            @Localizer["Blog_HeaderTitle"]
        </h1>
        <p class="lead mb-0">
            @Localizer["Blog_HeaderSubtitle"]
        </p>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-9">
            @if (Model.Posts != null && Model.Posts.Any())
            {
                <!-- Blog Posts Grid -->
                <div class="row g-4 mb-5">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden hover-lift">
                                @if (!string.IsNullOrEmpty(post.FeaturedImage))
                                {
                                    <img src="@post.FeaturedImage" class="card-img-top blog-img-cover" alt="@post.GetLocalizedTitle(Model.IsEnglish)">
                                }
                                else
                                {
                                    <div class="card-img-top blog-placeholder"></div>
                                }
                                <div class="card-body d-flex flex-column">
                                    <div class="mb-2">
                                        @if (post.Category != null)
                                        {
                                            <a href="/blog/category/@post.Category.Slug" class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill text-decoration-none">
                                                @post.Category.GetLocalizedName(Model.IsEnglish)
                                            </a>
                                        }
                                    </div>
                                    <h5 class="card-title fw-bold mb-3">
                                        <a href="/blog/@post.GetLocalizedSlug(Model.IsEnglish)" class="text-decoration-none text-dark stretched-link">
                                            @post.GetLocalizedTitle(Model.IsEnglish)
                                        </a>
                                    </h5>
                                    @{
                                        var localizedExcerpt = post.GetLocalizedExcerpt(Model.IsEnglish);
                                    }
                                    @if (!string.IsNullOrEmpty(localizedExcerpt))
                                    {
                                        <p class="card-text text-muted small mb-3 flex-grow-1">
                                            @localizedExcerpt
                                        </p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center text-muted small mt-auto">
                                        <span>
                                            <i class="bi bi-person-circle me-1"></i>
                                            @post.Author
                                        </span>
                                        <span>
                                            <i class="bi bi-clock me-1"></i>
                                            @post.ReadingTimeMinutes @Localizer["Blog_Minutes"]
                                        </span>
                                    </div>
                                    @if (post.PublishedAt.HasValue)
                                    {
                                        <div class="text-muted small mt-2">
                                            <i class="bi bi-calendar3 me-1"></i>
                                            @post.PublishedAt.Value.ToString("dd/MM/yyyy")
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Blog pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link rounded-pill me-2" href="?page=@(Model.CurrentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo; @Localizer["Blog_Previous"]</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link rounded-circle mx-1" href="?page=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link rounded-pill ms-2" href="?page=@(Model.CurrentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">@Localizer["Blog_Next"] &raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
                    <h3 class="mt-4 text-muted">@Localizer["Blog_NoPosts"]</h3>
                    <p class="text-muted">@Localizer["Blog_NoPostsHint"]</p>
                    <a href="/" class="btn btn-primary rounded-pill px-4 mt-3">
                        <i class="bi bi-house-fill me-2"></i>
                        @Localizer["Blog_BackToHome"]
                    </a>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-3">
            <!-- Categories Widget -->
            @if (Model.Categories != null && Model.Categories.Any())
            {
                <div class="card shadow-sm border-0 rounded-4 mb-4">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-4">
                            <i class="bi bi-folder text-primary me-2"></i>
                            @Localizer["Blog_Categories"]
                        </h5>
                        <div class="list-group list-group-flush">
                            @foreach (var category in Model.Categories)
                            {
                                <a href="/blog/category/@category.Slug" class="list-group-item list-group-item-action border-0 px-0 d-flex justify-content-between align-items-center">
                                    <span>@category.GetLocalizedName(Model.IsEnglish)</span>
                                    <i class="bi bi-chevron-right text-muted"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Popular Tags Widget -->
            @if (Model.PopularTags != null && Model.PopularTags.Any())
            {
                <div class="card shadow-sm border-0 rounded-4 mb-4">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-4">
                            <i class="bi bi-tags text-primary me-2"></i>
                            @Localizer["Blog_PopularTags"]
                        </h5>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tag in Model.PopularTags)
                            {
                                <a href="/blog/tag/@tag.Slug" class="badge bg-light text-dark px-3 py-2 rounded-pill text-decoration-none">
                                    #@tag.Name
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Recent Posts Widget -->
            @if (Model.RecentPosts != null && Model.RecentPosts.Any())
            {
                <div class="card shadow-sm border-0 rounded-4 mb-4">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-4">
                            <i class="bi bi-clock-history text-primary me-2"></i>
                            @Localizer["Blog_RecentPosts"]
                        </h5>
                        <div class="list-group list-group-flush">
                            @foreach (var post in Model.RecentPosts.Take(5))
                            {
                                <a href="/blog/@post.GetLocalizedSlug(Model.IsEnglish)" class="list-group-item list-group-item-action border-0 px-0">
                                    <h6 class="mb-1 fw-bold small">@post.GetLocalizedTitle(Model.IsEnglish)</h6>
                                    <small class="text-muted">
                                        @if (post.PublishedAt.HasValue)
                                        {
                                            <span>@post.PublishedAt.Value.ToString("dd/MM/yyyy")</span>
                                        }
                                    </small>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- CTA Widget -->
            <div class="card shadow-sm border-0 rounded-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-center text-white">
                    <i class="bi bi-hash" style="font-size: 3rem;"></i>
                    <h5 class="card-title fw-bold mt-3 mb-3">@Localizer["Blog_FindTrending"]</h5>
                    <p class="small mb-3">@Localizer["Blog_FindTrendingDesc"]</p>
                    <a href="/" class="btn btn-light btn-sm rounded-pill px-4">
                        <i class="bi bi-house-fill me-2"></i>
                        @Localizer["Blog_BackToHome"]
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
