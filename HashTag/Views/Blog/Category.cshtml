@model HashTag.ViewModels.BlogCategoryViewModel
@{
    ViewData["Title"] = Model.Category.DisplayNameVi + " - Blog";
    Layout = "_LayoutPublic";
}

<!-- Category Header -->
<div class="category-header py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="container text-center text-white">
        <h1 class="display-4 fw-bold mb-3">
            <i class="bi bi-folder-fill me-3"></i>
            @Model.Category.DisplayNameVi
        </h1>
        @if (!string.IsNullOrEmpty(Model.Category.Description))
        {
            <p class="lead mb-0">
                @Model.Category.Description
            </p>
        }
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang Chủ</a></li>
                    <li class="breadcrumb-item"><a href="/blog">Blog</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Category.DisplayNameVi</li>
                </ol>
            </nav>

            @if (Model.Posts != null && Model.Posts.Any())
            {
                <!-- Blog Posts Grid -->
                <div class="row g-4 mb-5">
                    @foreach (var post in Model.Posts)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden hover-lift">
                                @if (!string.IsNullOrEmpty(post.FeaturedImage))
                                {
                                    <img src="@post.FeaturedImage" class="card-img-top blog-img-cover" alt="@post.Title">
                                }
                                else
                                {
                                    <div class="card-img-top blog-placeholder"></div>
                                }
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold mb-3">
                                        <a href="/blog/@post.Slug" class="text-decoration-none text-dark stretched-link">
                                            @post.Title
                                        </a>
                                    </h5>
                                    @if (!string.IsNullOrEmpty(post.Excerpt))
                                    {
                                        <p class="card-text text-muted small mb-3 flex-grow-1">
                                            @post.Excerpt
                                        </p>
                                    }
                                    <div class="d-flex justify-content-between align-items-center text-muted small mt-auto">
                                        <span>
                                            <i class="bi bi-person-circle me-1"></i>
                                            @post.Author
                                        </span>
                                        <span>
                                            <i class="bi bi-clock me-1"></i>
                                            @post.ReadingTimeMinutes phút
                                        </span>
                                    </div>
                                    @if (post.PublishedAt.HasValue)
                                    {
                                        <div class="text-muted small mt-2">
                                            <i class="bi bi-calendar3 me-1"></i>
                                            @post.PublishedAt.Value.ToString("dd/MM/yyyy")
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Blog pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                <a class="page-link rounded-pill me-2" href="?page=@(Model.CurrentPage - 1)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo; Trước</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link rounded-circle mx-1" href="?page=@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                <a class="page-link rounded-pill ms-2" href="?page=@(Model.CurrentPage + 1)" aria-label="Next">
                                    <span aria-hidden="true">Sau &raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
                    <h3 class="mt-4 text-muted">Chưa có bài viết trong danh mục này</h3>
                    <p class="text-muted">Hãy quay lại sau để đọc những bài viết mới nhất!</p>
                    <a href="/blog" class="btn btn-primary rounded-pill px-4 mt-3">
                        <i class="bi bi-arrow-left me-2"></i>
                        Quay Về Blog
                    </a>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-3">
            <!-- All Categories Widget -->
            @if (Model.AllCategories != null && Model.AllCategories.Any())
            {
                <div class="card shadow-sm border-0 rounded-4 mb-4">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-4">
                            <i class="bi bi-folder text-primary me-2"></i>
                            Tất Cả Danh Mục
                        </h5>
                        <div class="list-group list-group-flush">
                            @foreach (var category in Model.AllCategories)
                            {
                                <a href="/blog/category/@category.Slug" class="list-group-item list-group-item-action border-0 px-0 d-flex justify-content-between align-items-center px-2 @(category.Id == Model.Category.Id ? "active" : "")">
                                    <span>@category.DisplayNameVi</span>
                                    <i class="bi bi-chevron-right text-muted"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Recent Posts Widget -->
            @if (Model.RecentPosts != null && Model.RecentPosts.Any())
            {
                <div class="card shadow-sm border-0 rounded-4 mb-4">
                    <div class="card-body">
                        <h5 class="card-title fw-bold mb-4">
                            <i class="bi bi-clock-history text-primary me-2"></i>
                            Bài Mới Nhất
                        </h5>
                        <div class="list-group list-group-flush">
                            @foreach (var post in Model.RecentPosts.Take(5))
                            {
                                <a href="/blog/@post.Slug" class="list-group-item list-group-item-action border-0 px-0">
                                    <h6 class="mb-1 fw-bold small">@post.Title</h6>
                                    <small class="text-muted">
                                        @if (post.PublishedAt.HasValue)
                                        {
                                            <span>@post.PublishedAt.Value.ToString("dd/MM/yyyy")</span>
                                        }
                                    </small>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- CTA Widget -->
            <div class="card shadow-sm border-0 rounded-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-center text-white">
                    <i class="bi bi-hash" style="font-size: 3rem;"></i>
                    <h5 class="card-title fw-bold mt-3 mb-3">Tìm Hashtag Trending</h5>
                    <p class="small mb-3">Top hashtag TikTok được cập nhật mỗi 6 giờ</p>
                    <a href="/" class="btn btn-light btn-sm rounded-pill px-4">
                        <i class="bi bi-house-fill me-2"></i>
                        Về Trang Chủ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .breadcrumb-item a {
        text-decoration: none;
        color: #667eea;
    }

    .breadcrumb-item a:hover {
        color: #764ba2;
    }

    .list-group-item.active {
        background-color: #667eea;
        border-color: #667eea;
        color: white;
    }
</style>
