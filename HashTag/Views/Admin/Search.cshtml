@model HashtagSearchViewModel
@{
    ViewData["Title"] = $"Admin Search: {Model.Query}";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Hashtags">Hashtags</a></li>
                    <li class="breadcrumb-item active">Search</li>
                </ol>
            </nav>
            <h1>
                <i class="bi bi-search"></i> Admin Search Results for "@Model.Query"
            </h1>
            <p class="text-muted">Found @Model.Results.TotalCount hashtag(s)</p>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="row mb-4">
        <div class="col-md-12">
            <form asp-action="Search" asp-controller="Admin" method="get" class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search hashtags..." value="@Model.Query" />
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i> Search
                </button>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="row">
        <div class="col-md-12">
            @if (Model.Results.Items.Any())
            {
                <div class="card">
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Hashtag</th>
                                    <th>Rank</th>
                                    <th>Sources</th>
                                    <th>Appearances</th>
                                    <th>PostCount</th>
                                    <th>ViewCount</th>
                                    <th>Difficulty</th>
                                    <th>Category</th>
                                    <th>Last Seen</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var hashtag in Model.Results.Items)
                                {
                                    <tr>
                                        <td>
                                            <strong class="text-primary">@hashtag.TagDisplay</strong>
                                            @if (hashtag.IsViral)
                                            {
                                                <span class="badge bg-danger ms-2" title="Viral trending">
                                                    <i class="bi bi-fire"></i> VIRAL
                                                </span>
                                            }
                                            @if (hashtag.TrendMomentum.HasValue && Math.Abs(hashtag.TrendMomentum.Value) >= 5)
                                            {
                                                var momentumClass = hashtag.TrendMomentum.Value > 0 ? "bg-success" : "bg-warning";
                                                var momentumIcon = hashtag.TrendMomentum.Value > 0 ? "bi-graph-up-arrow" : "bi-graph-down-arrow";
                                                var momentumText = hashtag.TrendMomentum.Value > 0 ? $"+{hashtag.TrendMomentum.Value:F1}%" : $"{hashtag.TrendMomentum.Value:F1}%";
                                                <span class="badge @momentumClass ms-2" title="7-day trend momentum">
                                                    <i class="bi @momentumIcon"></i> @momentumText
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">#@hashtag.BestRank</span>
                                            @if (hashtag.RankDiff.HasValue && hashtag.RankDiff.Value != 0)
                                            {
                                                var rankDiffClass = hashtag.RankDiff.Value > 0 ? "text-success" : "text-danger";
                                                var rankDiffIcon = hashtag.RankDiff.Value > 0 ? "bi-arrow-up" : "bi-arrow-down";
                                                <small class="@rankDiffClass ms-1">
                                                    <i class="bi @rankDiffIcon"></i>@Math.Abs(hashtag.RankDiff.Value)
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            @foreach (var source in hashtag.Sources)
                                            {
                                                <span class="badge bg-secondary me-1">@source</span>
                                            }
                                        </td>
                                        <td>@hashtag.TotalAppearances</td>
                                        <td>
                                            @if (hashtag.LatestPostCount.HasValue)
                                            {
                                                var postCountFormatted = hashtag.LatestPostCount.Value >= 1000
                                                    ? $"{hashtag.LatestPostCount.Value / 1000.0:F1}K"
                                                    : hashtag.LatestPostCount.Value.ToString("N0");
                                                <span class="badge bg-info">@postCountFormatted</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (hashtag.LatestViewCount.HasValue)
                                            {
                                                var viewCountFormatted = hashtag.LatestViewCount.Value >= 1_000_000
                                                    ? $"{hashtag.LatestViewCount.Value / 1_000_000.0:F1}M"
                                                    : hashtag.LatestViewCount.Value >= 1000
                                                        ? $"{hashtag.LatestViewCount.Value / 1000.0:F1}K"
                                                        : hashtag.LatestViewCount.Value.ToString("N0");
                                                <span class="badge bg-primary">@viewCountFormatted</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(hashtag.DifficultyLevel))
                                            {
                                                var badgeClass = hashtag.DifficultyLevel switch
                                                {
                                                    "Easy" => "bg-success",
                                                    "Medium" => "bg-warning",
                                                    "Hard" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                                <span class="badge @badgeClass">@hashtag.DifficultyLevel</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(hashtag.CategoryName))
                                            {
                                                <span class="badge bg-info">@hashtag.CategoryName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>@hashtag.LastSeen.ToString("g")</td>
                                        <td>
                                            <a asp-controller="Hashtag" asp-action="Details" asp-route-slug="@hashtag.Tag" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                @if (Model.Results.TotalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            @if (Model.Results.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Search" asp-route-q="@Model.Query" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                                </li>
                            }

                            @for (int i = 1; i <= Model.Results.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Search" asp-route-q="@Model.Query" asp-route-page="@i">@i</a>
                                </li>
                            }

                            @if (Model.Results.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Search" asp-route-q="@Model.Query" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> No hashtags found matching "@Model.Query"
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <a asp-action="Hashtags" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Hashtags Dashboard
            </a>
        </div>
    </div>
</div>
