@model ManualCrawlViewModel
@{
    ViewData["Title"] = "Manual Crawl";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item active">Manual Crawl</li>
                </ol>
            </nav>
            <h1><i class="bi bi-play-circle"></i> Manual Crawl</h1>
            <p class="text-muted">Trigger hashtag crawling manually</p>
        </div>
    </div>

    <!-- Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Crawl All Sources -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-globe"></i> Crawl All Sources</h5>
                </div>
                <div class="card-body">
                    <p>This will crawl all active sources and collect trending hashtags. This process may take several minutes.</p>
                    <form asp-action="CrawlAll" method="post" onsubmit="return confirm('Are you sure you want to crawl all sources? This may take several minutes.');">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-play-fill"></i> Start Crawling All Sources
                        </button>
                    </form>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            Active sources: @Model.AvailableSources.Count |
                            Estimated time: ~@(Model.AvailableSources.Count * 30) seconds
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Crawl Individual Sources -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Crawl Individual Source</h5>
                </div>
                <div class="card-body">
                    <p>Select a specific source to crawl:</p>
                    <div class="row">
                        @foreach (var source in Model.AvailableSources)
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <h6 class="card-title">@source.Name</h6>
                                        <form asp-action="CrawlSource" method="post">
                                            <input type="hidden" name="sourceName" value="@source.Name" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary w-100">
                                                <i class="bi bi-arrow-clockwise"></i> Crawl @source.Name
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Panel -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info">
                <h6><i class="bi bi-lightbulb"></i> Tips:</h6>
                <ul class="mb-0">
                    <li>Crawling all sources is recommended to get comprehensive data</li>
                    <li>Individual source crawling is useful for testing or troubleshooting</li>
                    <li>Automatic crawling runs every 6 hours (configurable in appsettings.json)</li>
                    <li>Check <a asp-action="CrawlLogs" class="alert-link">Crawl Logs</a> to see detailed results</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show loading spinner when form is submitted
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function() {
                const button = this.querySelector('button[type="submit"]');
                button.disabled = true;
                button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Crawling...';
            });
        });
    </script>
}
