    {
        <meta property="og:url" content="@seo.CanonicalUrl" />
    }

    @if (!string.IsNullOrEmpty(seo.OgImage))
    {
        <meta property="og:image" content="@seo.OgImage" />
        <meta property="og:image:width" content="@seo.OgImageWidth" />
        <meta property="og:image:height" content="@seo.OgImageHeight" />
        <meta property="og:image:alt" content="@(seo.OgTitle ?? pageTitle)" />
    }

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="@seo.TwitterCard" />
    <meta name="twitter:title" content="@(seo.OgTitle ?? pageTitle)" />
    <meta name="twitter:description" content="@(seo.OgDescription ?? seo.Description)" />

