@using HashTag.ViewModels
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Localization
@using HashTag
@using HashTag.Helpers
@inject IStringLocalizer<SharedResource> Localizer
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCulture?.RequestCulture.UICulture.Name ?? "vi";
    var isEnglish = currentCulture.StartsWith("en");
    var langCode = isEnglish ? "en" : "vi";
    var seo = ViewData["SeoMetadata"] as SeoMetadata ?? new SeoMetadata();

    // Fallback to ViewData if SeoMetadata is not set
    var pageTitle = seo.Title ?? ViewData["Title"]?.ToString() ?? "Trang Ch·ªß";
    var description = seo.Description ?? ViewData["Description"]?.ToString() ?? "C√¥ng c·ª• ph√¢n t√≠ch hashtag TikTok trending";
    var keywords = seo.Keywords ?? ViewData["Keywords"]?.ToString() ?? "hashtag tiktok, trending, viral";

    var fullTitle = pageTitle.Contains("TrendTag") ? pageTitle : $"{pageTitle} | TrendTag - Ph√¢n T√≠ch Hashtag TikTok Vi·ªát Nam";

    // Build canonical URL for hreflang
    var baseUrl = "https://www.viralhashtag.vn";
    var currentPath = Context.Request.Path.ToString();
    var canonicalUrl = $"{baseUrl}{currentPath}";
}
<!DOCTYPE html>
<html lang="@langCode">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Hreflang tags for International SEO -->
    <!-- Vietnamese (default for .vn domain) -->
    <link rel="alternate" hreflang="vi" href="@canonicalUrl" />
    <!-- English versions for international markets -->
    <link rel="alternate" hreflang="en" href="@canonicalUrl" />
    <link rel="alternate" hreflang="en-US" href="@canonicalUrl" />
    <link rel="alternate" hreflang="en-GB" href="@canonicalUrl" />
    <link rel="alternate" hreflang="en-AU" href="@canonicalUrl" />
    <!-- Default fallback -->
    <link rel="alternate" hreflang="x-default" href="@canonicalUrl" />

    <!-- SEO Meta Tags -->
    <title>@fullTitle</title>
    <meta name="description" content="@description" />
    <meta name="keywords" content="@keywords" />
    <meta name="author" content="TrendTag" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />

    @if (!string.IsNullOrEmpty(seo.CanonicalUrl))
    {
        <link rel="canonical" href="@seo.CanonicalUrl" />
    }

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="@(seo.OgType ?? "website")" />
    <meta property="og:title" content="@(seo.OgTitle ?? pageTitle)" />
    <meta property="og:description" content="@(seo.OgDescription ?? description)" />
    <meta property="og:site_name" content="TrendTag - TikTok Hashtag Analytics" />
    <meta property="og:locale" content="@(isEnglish ? "en_US" : "vi_VN")" />
